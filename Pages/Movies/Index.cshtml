@page
@model ASP_Razor_Shoes.Pages.Movies.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Shoe Lists</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Shoe[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Shoe[0].Brand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Shoe[0].Style)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Shoe[0].Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Shoe[0].Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Shoe) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Brand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Style)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
