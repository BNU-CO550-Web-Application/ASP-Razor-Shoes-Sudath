@page
@using ASP_Razor_Shoes.Models
@model ASP_Razor_Shoes.Pages.Movies.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Shoe</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Shoe.Name" class="control-label"></label>
                <input asp-for="Shoe.Name" class="form-control" />
                <span asp-validation-for="Shoe.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Shoe.Brand" class="control-label"></label>
                <select asp-for="Shoe.Brand" class="form-control"
                        asp-items="@Html.GetEnumSelectList<Brands>()">
                </select>
                <span asp-validation-for="Shoe.Brand" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Shoe.Style" class="control-label"></label>
                <select asp-for="Shoe.Style" class="form-control"
                        asp-items="@Html.GetEnumSelectList<Styles>()">
            </select>
                <span asp-validation-for="Shoe.Style" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Shoe.Gender" class="control-label"></label>
                <select asp-for="Shoe.Gender" class="form-control"
                        asp-items="@Html.GetEnumSelectList<Genders>()">
            </select>
                <span asp-validation-for="Shoe.Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Shoe.Price" class="control-label"></label>
                <input asp-for="Shoe.Price" class="form-control" />
                <span asp-validation-for="Shoe.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
